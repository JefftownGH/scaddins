<UserControl x:Class="SCaddins.SpellChecker.Views.SpellCheckerOptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SCaddins.SpellChecker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="5">List of element types to ignore:</Label>
        <TextBox x:Name="ElementsToIgnore" Grid.Row="1" AcceptsReturn="True" Margin="5" VerticalScrollBarVisibility="Visible" MinHeight="480">
        </TextBox>
        <StackPanel Grid.Row="3" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="Cancel" HorizontalAlignment="Right" MinWidth="48" Margin="5">Cancel</Button>
            <Button x:Name="Apply" HorizontalAlignment="Right" MinWidth="48" Margin="5">OK</Button>
        </StackPanel>
    </Grid>
</UserControl>
