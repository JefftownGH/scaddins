<UserControl x:Class="SCaddins.SolarUtilities.Views.DirectSunView"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SCaddins.SolarUtilities.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="SelectMasses" Grid.Row="0">Select Analysis Masses</Button>
        <Button x:Name="SelectAnalysisFaces" Grid.Row="1">Select Analysis Faces(to colour)</Button>
        <TextBlock x:Name="SelectionInformation"
                   Grid.Row="2"
                   TextWrapping="Wrap">
        </TextBlock>
        <TextBox x:Name="AnalysisGridSize" Grid.Row="3"></TextBox>
        <Button x:Name="RunAnalysis" Grid.Row="4">Run Analysis</Button>
    </Grid>
</UserControl>
